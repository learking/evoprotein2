<beast version='2.0'
       namespace='beast.evolution.alignment:beast.core:beast.evolution.tree.coalescent:beast.core.util:beast.evolution.nuc:beast.evolution.operators:beast.evolution.sitemodel:beast.evolution.substitutionmodel:beast.evolution.likelihood'>

    <data id="alignment" dataType="nucleotide">
        <sequence taxon="Human">
	  CCAAA
	    </sequence>
        <sequence taxon="Chimpanzee">
	  CCAAA
	    </sequence>
        <sequence taxon="Gorilla">
	  CTAAG
	    </sequence>
        <sequence taxon="Orangutan">
	  CTAAC
	    </sequence>
        <sequence taxon="Gibbon">
	  CTAAA
	    </sequence>
    </data>

    <input spec='beast.evolution.substitutionmodel.InstantHKY' id='hky'>
        <kappa idref='hky.kappa'/>
        <frequencies id='freqs' spec='Frequencies'>
            <data idref='alignment'/>
        </frequencies>
    </input>

    <input spec='SiteModel' id="siteModel" gammaCategoryCount='1'>
        <substModel idref='hky'/>
    </input>

    <input spec='beast.evolution.likelihood.PathTreeLikelihood' id="pathTreeLikelihood">
        <PathTree idref="pathtree"/>
        <siteModel idref="siteModel"/>
    </input>

    <tree id='tree' spec='beast.util.TreeParser' newick='(((Human: 0.07, Chimpanzee: 0.07): 0.43, (Orangutan: 0.4, Gibbon: 0.4): 0.1):0.0 , Gorilla: 0.5)'>
    	<taxa idref="alignment" />
    </tree>
    
    <input spec='beast.evolution.tree.PathTree' id='pathtree'>
    	<initial idref="tree" />
    	<alignment idref="alignment" />
    </input>

    <parameter id="hky.kappa" value="1.0" lower="0.0"/>
    
    <run spec="MCMC" id="mcmc" chainLength="2">
	<distribution id='likelihood' idref="pathTreeLikelihood"/>

        <operator id='dummyPathSamplingOperator' spec='beast.evolution.operators.PathSamplingOperator' weight="1" pathtree="@pathtree"/>
        <logger logEvery="1" fileName="test.$(seed).log">
	        <model idref='likelihood'/>
            <log idref="likelihood"/>
            <log idref='hky.kappa'/>
        </logger>

    </run>
</beast>
